# =============================================================================
# Database Configuration
# =============================================================================

# Primary database connection string (takes precedence over individual settings)
DATABASE_URL=postgres://kanban_user:kanban_password@localhost:5432/kanban_db

# Individual database settings (used if DATABASE_URL is not provided)
DB_HOST=localhost
DB_PORT=5432
DB_USER=kanban_user
DB_PASSWORD=kanban_password
DB_NAME=kanban_db

# =============================================================================
# Application Configuration
# =============================================================================

# Node.js environment
NODE_ENV=development

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Security & Authentication (for future use)
# =============================================================================

# JWT secret (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret
SESSION_SECRET=your-session-secret-change-this-in-production

# =============================================================================
# External Services (for future use)
# =============================================================================

# Avatar service (if using external avatar generation)
AVATAR_SERVICE_URL=https://api.example.com/avatars

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable detailed logging
DEBUG=false

# Database logging
DB_LOGGING=false 